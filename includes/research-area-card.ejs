```{=html}
<div class="research-areas-section">
  <% if (items.length > 0) { %>
    <%
      // Group items by category
      const itemsByCategory = {};
      items.forEach(item => {
        const category = item.categories && item.categories.length > 0 ? item.categories[0] : 'Other';
        if (!itemsByCategory[category]) {
          itemsByCategory[category] = [];
        }
        itemsByCategory[category].push(item);
      });
    %>
    
    <% for (const category in itemsByCategory) { %>
      <div class="research-areas-grid">
        <% itemsByCategory[category].forEach(item => { %>
          <div class="research-area-card">
            <% if (item.image) { %>
              <div class="research-area-image">
                <img src="<%= item.image %>" alt="<%= item.title %>" />
              </div>
            <% } %>
            <div class="research-area-content">
              <h3><%= item.title %></h3>
              <p><%= item.description %></p>
              <a href="<%= item.path %>" class="research-link">View publications</a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  <% } else { %>
    <p>No research areas found.</p>
  <% } %>
</div>
